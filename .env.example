# Application
APP_ENV=development
APP_DEBUG=true
YII_ENV=dev

# Database (PostgreSQL)
DB_DSN=pgsql:host=pgsql;dbname=yii2advanced
DB_NAME=yii2advanced
DB_USERNAME=yii2
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root_secret
DB_CHARSET=utf8

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Monitoring
FPM_STATUS_URL=http://php-fpm:9001/fpm-status
PROMETHEUS_ENABLED=true

# Grafana (Optional)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Alerts
ALERT_TELEGRAM_TOKEN=
ALERT_TELEGRAM_CHAT_ID=
ALERT_SLACK_WEBHOOK=
ALERT_EMAILS=admin@example.com

# Rate Limiting
RATE_LIMIT_USER_CAPACITY=100
RATE_LIMIT_USER_REFILL_RATE=10
RATE_LIMIT_IP_CAPACITY=30
RATE_LIMIT_IP_REFILL_RATE=5

# Throttling
THROTTLE_CPU_THRESHOLD=70
THROTTLE_MEMORY_THRESHOLD=80

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_OPEN_DURATION=60

# Xdebug (Development only)
XDEBUG_MODE=off
